.container
  .page-header.align-center
    h1 Auburn Football Recruiting 
    div(class="dropdown rec-year-dropdown").
      <button class="btn btn-au btn-lg dropdown-toggle" type="button" id="yearDropdown" data-toggle="dropdown">{{currentClass}}<span class="caret"></span></button>
      <ul class="dropdown-menu" role="menu" aria-labelledby="yearDropdown">
        <li role="presentation"><a role="menuitem" tabindex="-1" ng-click="getRecruits(2011)">2011</a></li>
        <li role="presentation" class="divider"></li><li role="presentation"><a role="menuitem" tabindex="-1" ng-click="getRecruits(2012)">2012</a></li>
        <li role="presentation" class="divider"></li><li role="presentation"><a role="menuitem" tabindex="-1" ng-click="getRecruits(2013)">2013</a></li>
        <li role="presentation" class="divider"></li><li role="presentation"><a role="menuitem" tabindex="-1" ng-click="getRecruits(2014)">2014</a></li>
      </ul>

  table.table.table-responsive.table-hover#recruit-table
    thead
      tr
        th
          a(ng-click='predicate = "surname"; reverse=!reverse;') Name
          span(ng-show='predicate == "surname" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "surname" && reverse').glyphicon.glyphicon-chevron-down
        th
          a(ng-click='predicate = "pos"; reverse=!reverse;') Pos
          span(ng-show='predicate == "pos" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "pos" && reverse').glyphicon.glyphicon-chevron-down
        th
          a(ng-click='predicate = "state"; reverse=!reverse;') Hometown
          span(ng-show='predicate == "state" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "state" && reverse').glyphicon.glyphicon-chevron-down
        th.hidden-xs
          a(ng-click='predicate = "hs"; reverse=!reverse;') High School
          span(ng-show='predicate == "hs" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "hs" && reverse').glyphicon.glyphicon-chevron-down
        th.hidden-xs.align-center
          a(ng-click='predicate = "rivalsstars"; reverse=!reverse;') Rivals
          span(ng-show='predicate == "rivalsstars" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "rivalsstars" && reverse').glyphicon.glyphicon-chevron-down
        th.hidden-xs.align-center
          a(ng-click='predicate = "scoutstars"; reverse=!reverse;') Scout
          span(ng-show='predicate == "scoutstars" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "scoutstars" && reverse').glyphicon.glyphicon-chevron-down
        th.hidden-xs.align-center
          a(ng-click='predicate = "rivalsrank"; reverse=!reverse;') Rivals Rank
          span(ng-show='predicate == "rivalsrank" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "rivalsrank" && reverse').glyphicon.glyphicon-chevron-down
        th.hidden-xs.align-center
          a(ng-click='predicate = "scoutrank"; reverse=!reverse;') Scout Rank
          span(ng-show='predicate == "scoutrank" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "scoutrank" && reverse').glyphicon.glyphicon-chevron-down
        th.visible-xs
          a(ng-click='predicate = "avgstars"; reverse=!reverse;') Stars
          span(ng-show='predicate == "avgstars" && !reverse').glyphicon.glyphicon-chevron-up
          span(ng-show='predicate == "avgstars" && reverse').glyphicon.glyphicon-chevron-down
        th.visible-xs Rank
    tbody
      tr(ng-repeat='rec in recruits | orderBy:predicate:reverse')
        td {{rec.forename}} {{rec.surname}}
        td {{rec.pos}}
        td {{rec.city}}, {{rec.state}}
        td.hidden-xs {{rec.hs}}
        td.hidden-xs.align-center {{rec.rivalsstars}} <span class="glyphicon glyphicon-star"></span>
        td.hidden-xs.align-center {{rec.scoutstars}} <span class="glyphicon glyphicon-star"></span>
        td.hidden-xs.align-center {{rec.rivalsrank}}
        td.hidden-xs.align-center {{rec.scoutrank}}
        td.visible-xs {{(rec.scoutstars + rec.rivalsstars) / 2.0 | number:1}}
        td.visible-xs {{(rec.rivalsrank + rec.scoutrank) / 2.0 | number:1}}

.footer.align-center
    img(src='images/eagle-2.png', height='50px', width='auto')
    h3 WAR EAGLE