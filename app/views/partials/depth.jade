  .col-xs-12
    p.align-center <strong>Bold</strong> denotes returning starter.


div(class='modal fade', id='playerModal', tabindex='-1', role='dialog', aria-hidden='true')
  div(class='modal-dialog')
    div(class='modal-content').align-center
      div(class='modal-header')
        button(type='button' class='close' data-dismiss='modal' aria-hidden='true') &times;
        h3#myModalLabel.modal-title {{selectedPlayer.forename}} {{selectedPlayer.surname}}

      div(class='modal-body')
        img(src='{{selectedPlayer.img}}').img.img-responsive.center.img-rounded
        h4 {{selectedPlayer.pos}} - \#{{selectedPlayer.num}}
        h5 Height: {{selectedPlayer.height}}
        h5 Weight: {{selectedPlayer.weight}}
        h5 {{selectedPlayer.city}}, {{selectedPlayer.state}}

      div(class='modal-footer')
        button(type='button', class='btn btn-default', data-dismiss='modal') Close

.footer.align-center
    img(src='images/eagle-2.png', height='50px', width='auto').eagle-pic
    h3 WAR EAGLE

